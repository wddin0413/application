  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4 class="-title">Title</h4>
  <%= f.text_field :title %>

  <h4 class="-body">Body</h4>
  <%= f.text_area :body %>

  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

